<tr>
  <td class="text-c">
    <% params[:page] ||= "1" %>
    <%= index_for params[:page], category_counter, Settings.category.per_page %>
  </td>
  <td class="text-l"><p><%= category.name %></p></td>
  <td class="text-l"><%= category.description %></td>
  <td><%= l category.created_at, format: :long %></td>
  <td class="text-center">
    <%= link_to edit_admin_category_path(category),
      title: t("category_edit"), class: "underline" do %>
      <span class="glyphicon glyphicon-edit"></span>
    <% end %>
  </td>
  <td class="text-center">
    <%= link_to [:admin, category], method: :delete, title: t("category_delete"),
      class: "underline text-danger", data: {confirm: (t "sure")} do %>
      <span class="glyphicon glyphicon-trash"></span>
    <% end %>
  </td>
</tr>
