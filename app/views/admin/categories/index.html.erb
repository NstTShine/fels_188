<% provide :title, (t "category_page_title") %>
<div class="div-add-new">
  <%= link_to "Add New Category", new_admin_category_path,
    class: "btn btn-success" %>
</div>
<div class="col-sm-12 no-padding-right">
  <table class="table table-hover bg-table ls-result text-center">
    <thead class="title_table">
      <tr>
        <th class="text-center w-index"><%= t "index" %></th>
        <th class="text-center tbl-cate-name"><%= t ".category_name" %></th>
        <th class="text-center cate-description"><%= t ".description" %></th>
        <th class="text-center create-date"><%= t ".created" %></th>
        <th class="text-center opt-edit"><%= t ".edit" %></th>
        <th class="text-center opt-delete"><%= t ".delete" %></th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "category", collection: @categories, as: :category %>
    </tbody>
  </table>
  <div class="wrap-paging fix-paging"><%= will_paginate %></div>
</div>
