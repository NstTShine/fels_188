<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
    <%= t "error_ms" %><%= pluralize(@user.errors.count, (t "err")) %>.
      <ul>
        <% object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

